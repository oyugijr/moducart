<% layout('layouts/auth') %>

<div class="auth-split">
  <div class="auth-left d-none d-md-flex align-items-center justify-content-center">
    <div class="brand-left text-start">
      <h1>ModuCart</h1>
    </div>
  </div>

  <div class="auth-right d-flex align-items-center justify-content-center">
    <div class="auth-panel">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <div class="auth-tabs mb-3">
        <a href="/auth/login">Login</a>
        <a class="active">Register</a>
      </div>

      <form method="post" action="/auth/register" class="auth-form">
        <div class="row g-2 mb-2">
          <div class="col-md-6">
            <input name="firstName" class="form-control form-control-lg" type="text" placeholder="First Name" required>
          </div>
          <div class="col-md-6">
            <input name="lastName" class="form-control form-control-lg" type="text" placeholder="Last Name">
          </div>
        </div>

        <div class="row g-2 mb-2">
          <div class="col-md-6">
            <input name="phone" class="form-control form-control-lg" type="tel" placeholder="Phone Number">
          </div>
          <div class="col-md-6">
            <input name="username" class="form-control form-control-lg" type="text" placeholder="Username" required>
          </div>
        </div>

        <div class="mb-2">
          <input name="email" class="form-control form-control-lg" type="email" placeholder="Email Address" required>
        </div>

        <div class="row g-2 mb-3">
          <div class="col-md-6">
            <input name="password" class="form-control form-control-lg" type="password" placeholder="Password" required>
          </div>
          <div class="col-md-6">
            <input name="confirmPassword" class="form-control form-control-lg" type="password" placeholder="Confirm Password" required>
          </div>
        </div>

        <div class="mb-3">
          <!-- reCAPTCHA widget (site key provided via app.locals.recaptchaSiteKey) -->
          <% if (recaptchaSiteKey) { %>
            <div class="g-recaptcha" data-sitekey="<%= recaptchaSiteKey %>"></div>
          <% } else { %>
            <div class="alert alert-warning text-dark">reCAPTCHA not configured. Set RECAPTCHA_SITE_KEY to enable.</div>
          <% } %>
        </div>

        <div class="d-grid">
          <button class="btn btn-light auth-btn" type="submit">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% layout('layouts/auth') %>
<div class="row justify-content-center">
  <div class="col-md-6">
    <h4>Create Admin (local)</h4>
    <p>Registration is disabled in production. Use seeded admin credentials.</p>
    <a href="/auth/login" class="btn btn-secondary">Back to Login</a>
  </div>
</div>
